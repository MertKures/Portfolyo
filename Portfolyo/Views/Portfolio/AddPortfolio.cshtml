@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using EntityLayer.Concrete;

@model Portfolio

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yeni Deneyim Ekleme Paneli</p>
            @using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post, new { @class = "forms-sample"}))
            {
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" name="Name" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Platform</label>
                    <input type="text" name="Platform" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Platform, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Görsel URL</label>
                    <input type="text" name="ImageUrl" class="form-control" />
                    @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>İkinci Görsel URL</label>
                    <input type="text" name="ImageUrl2" class="form-control" />
                    @Html.ValidationMessageFor(x => x.ImageUrl2, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Görsel 1</label>
                    <input type="text" name="Image1" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Image1, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Görsel 2</label>
                    <input type="text" name="Image2" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Image2, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Görsel 3</label>
                    <input type="text" name="Image3" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Image3, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Görsel 4</label>
                    <input type="text" name="Image4" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Image4, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Proje URL</label>
                    <input type="text" name="ProjectUrl" class="form-control" />
                    @Html.ValidationMessageFor(x => x.ProjectUrl, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    <input type="number" name="Value" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Durum</label>
                    <input type="checkbox" name="Status" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                <a class="btn btn-dark" href="/Portfolio">İptal</a>
            }
        </div>
    </div>
</div>