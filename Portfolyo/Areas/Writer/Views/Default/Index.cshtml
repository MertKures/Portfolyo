@using EntityLayer.Concrete;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    System.Text.StringBuilder color = new System.Text.StringBuilder();
    color.Append("badge-info");
}

@model List<Announcement>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                @if (item.Type == "Test")
                                {
                                    color.Clear();
                                    color.Append("badge-success");
                                }
                                else
                                {
                                    color.Clear();
                                    color.Append("badge-info");
                                }
                                <td><label class="badge @color">@item.Type</label></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
